{
  "eval_set_id": "compliance_officer_eval",
  "name": "ComplianceOfficer Agent Evaluation Set",
  "description": "Evaluates the ComplianceOfficer agent for correct tool usage and compliance validation behavior",
  "metrics": [
    {
      "metric_name": "tool_trajectory_avg_score",
      "threshold": 0.9
    },
    {
      "metric_name": "response_match_score",
      "threshold": 0.5
    }
  ],
  "test_file": "compliance_validation.test.json",
  "agent_module": "agents.compliance",
  "agent_factory": "create_compliance_agent",
  "categories": {
    "tool_calling": [
      "validate_roster_with_explicit_id",
      "validate_roster_default",
      "call_both_validation_tools",
      "comprehensive_compliance_review"
    ],
    "error_handling": [
      "handle_no_draft_roster",
      "validate_nonexistent_roster"
    ],
    "specific_checks": [
      "check_certification_requirements",
      "check_weekly_hours_only",
      "check_senior_coverage",
      "check_seniority_requirements",
      "check_fatigue_in_compliance"
    ],
    "information_retrieval": [
      "lookup_nurse_certifications",
      "get_regulations_context"
    ]
  }
}
